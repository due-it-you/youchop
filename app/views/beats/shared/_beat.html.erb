  <% beats.each do |beat| %>
    <div>
      <div class="flex items-center justify-between rounded-xl border p-7 shadow bg-white space-y-3">
        <div>
          <div>
            <h2 class="font-bold text-lg">ðŸŽµ <%= beat.title %></h2>
