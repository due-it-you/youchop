<div data-controller="step-sequencer">
  <div class="px-12 py-4">
    <div class="mb-4">
      <div class="flex justify-center items-center gap-3">
        <div class="flex items-center">
          <label for="bpm">BPM:</label>
          <div class="text-lg mr-2 w-12" data-step-sequencer-target="current_bpm">90</div>
        </div>
        <input type="range" id="bpm" min="60" max="240" value="90" data-action="input->step-sequencer#currentBPM" data-step-sequencer-target="bpm">
        <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded">Play</button>
        <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded">Stop</button>
      </div>
    </div>
    <div class="flex justify-center">
      <div class="grid grid-cols-1 gap-2">
        <div class="flex items-center justify-center">
          <div class="border border-black px-4 py-2 mr-2 font-bold rounded">Chops</div>
        </div>
        <div class="flex items-center justify-center">
          <div class="border border-black px-4 py-2 mr-2 font-bold rounded">Hihats</div>
        </div>
        <div class="flex items-center justify-center">
          <div class="border border-black px-4 py-2 mr-2 font-bold rounded">Snares</div>
        </div>
        <div class="flex items-center justify-center">
          <div class="border border-black px-4 py-2 mr-2 font-bold rounded">Kicks</div>
        </div>
      </div>
      <div class="grid grid-cols-16 gap-2">
        <% 64.times do |step_number| %>
          <div active="false" index="<%= step_number + 1 %>" class="aspect-square border border-black h-12 rounded" data-step-sequencer-target="step"  data-action="click->step-sequencer#stepActiveControl"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>